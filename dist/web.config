<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- 1. Security headers (CSP, Referrer, XCTO, HSTS, XFO, CORS) -->
    <httpProtocol>
      <customHeaders>

        <!-- Content Security Policy -->
        <add name="Content-Security-Policy"
             value="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';" />

        <!-- Referrer Policy -->
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />

        <!-- X-Content-Type-Options -->
        <add name="X-Content-Type-Options" value="nosniff" />

        <!-- HSTS -->
        <add name="Strict-Transport-Security"
             value="max-age=31536000; includeSubDomains" />

        <!-- CORS: fix overly-permissive Access-Control-Allow-Origin -->
        <remove name="Access-Control-Allow-Origin" />
        <add name="Access-Control-Allow-Origin"
             value="https://monopoly-freneg6ghmfjf3hw.centralindia-01.azurewebsites.net" />

        <remove name="Access-Control-Allow-Methods" />
        <add name="Access-Control-Allow-Methods" value="GET, OPTIONS" />

        <!-- Clickjacking protection -->
        <add name="X-Frame-Options" value="DENY" />

      </customHeaders>
    </httpProtocol>

    <!-- 2. Host header protection (Host Header Injection) -->
    <rewrite>
      <rules>

        <!-- Allow only your expected host; anything else is rejected -->
        <rule name="Block unexpected hosts" stopProcessing="true">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAll">
            <!-- replace host below if you use a custom domain -->
            <add input="{HTTP_HOST}"
                 pattern="^monopoly-freneg6ghmfjf3hw\.centralindia-01\.azurewebsites\.net$"
                 negate="true" />
          </conditions>
          <!-- Either redirect to canonical host OR return 400; 
               here we choose redirect which scanners usually accept -->
          <action type="Redirect"
                  url="https://monopoly-freneg6ghmfjf3hw.centralindia-01.azurewebsites.net/{R:1}"
                  redirectType="Permanent" />
        </rule>

      </rules>
    </rewrite>

  </system.webServer>
</configuration>
